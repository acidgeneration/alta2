.share
  text-align center
  a
    width: 40px
    height: 40px
    display inline-block

    background url(%=static=%content/share.png)
    & + a
      margin-left 3%
  .Twitter
    background-position: -42px 0
  .Facebook
    background-position: 0 0
  .Vkontakte
    background-position: -168px 0
  .Google
    background-position: -252px 0
  .Odnoklassniki
    background-position: -126px 0


.item_gallery
  color color-dark
  margin-bottom 2em
  img
    display block
    //margin-bottom 20px //1em
    margin 0 auto 20px


.gallery_title
  color color-dark //#444
  font-size 18px
  line-height 1.6

  i
    float right
    padding-left 18px
    color #999
    font-size 12px
    &.chat
      background url('%=static=%assets/gallery_page/chat.png') left center no-repeat
      margin-left 20px
    &.photo
      background url('%=static=%assets/gallery_page/photo.png') left center no-repeat
  p
    color color-light-blue



.description
  h3
    margin 14px 0
    color #777
    font-size 18px
  .autor
    margin 1em 0

  b
    font-weight bold
  a
    color color-light-blue

  dt
    padding-left 20px
    &:nth-child(1)
      background url('%=static=%assets/gallery_page/map.png') left center no-repeat
    &:nth-child(2)
      background url('%=static=%assets/gallery_page/date.png') left center no-repeat
    &:nth-child(3)
      background url('%=static=%assets/gallery_page/material.png') left center no-repeat




.item_gallery-more
  text-align center
  margin 2em 0

  a
    font-size 16px
    color #999
    border-bottom 1px dashed #999
