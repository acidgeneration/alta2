mixin items()
	for item in ["item1", "item2", "item3", "item4", "item5"]
		label.control.checkbox
			input(type="checkbox", name="x")
			i.control-indicator
			| #{item}




h1 Где купить сайдинг?
.wrap-select
	- var options = ["Москва", "Московская область", "Тутуево", "Кукуево"];
		select(style="width:100%")
			- for option in options
				option(value="") #{option}

