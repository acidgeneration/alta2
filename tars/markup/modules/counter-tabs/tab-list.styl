.tab-list
	//counter-reset list
	padding 45px 0 5px

	.sub-title
		color red
		font-family 'Trebuchet MS',sans-serif
		font-weight bold
		font-size 18px
		line-height 24px
		padding-bottom 4px
		display block
		&.dark
			color #444



	.wrap-item
		position: relative
		padding-bottom 29px

	.tab-title
		padding-left 37px
		color #0071bb
		font-size 25px
		line-height 28px
		display block
		text-decoration underline

.tab-item
	padding 28px 13px 10px
	display none

	p
		// font-size 14px
		// line-height 18px
		// display block
		// word-wrap break-word

		color #777
		padding-bottom 20px

		&:last-child
			padding-bottom 0
	i
		font-style italic
		font-size 11px
		line-height 14px
