.js_basket-item_remove
  cursor pointer
  font-size 1.6em
  color #888

  position absolute
  &:hover
    color #000
  &:active
    color red

._W50
  width 48%
  display inline-block
  vertical-align top
  //float left

  text-align center
  margin 2em 0

  &.js_expander-trigger
    text-align left
    i
      cursor pointer
      border-bottom: 1px dashed #444
      font-size 18px
      font-weight bold



.section_basket
  padding 1em 13px 1px
  background #FDFDFD
  counter-reset num

.item_basket
  padding 3em 0 0
  & + .item_basket
    border-top 1px solid #CCC
  p,li
    color #888
  //.js_more-trigger
  .basket_more
    margin-left 50%
    &.active
      color #999
      margin-left 0

.basket_more
  color color-light-blue
  margin-bottom 1.4em
  display inline-block
  border-bottom: 1px dashed




.item_basket_L
.item_basket_R
  // display inline-block
  // vertical-align top
  float left
  width 50%
.item_basket_L
  //width 40%
  padding-left 2em
  &:before
    counter-increment: num
    content: counter(num) ". "
    font-size 2em
  img
    float right
    margin-right 1em

.item_basket_R
  //width 50%
  li
    line-height 22px
    &:first-child
    &:last-child
