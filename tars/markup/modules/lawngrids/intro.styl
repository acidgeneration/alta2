.intro_lawngrids
  text-align center
  color #FFF
  background url('%=static=%assets/lawngrids/z_bg.jpg') no-repeat center #0F2418
  height 430px

  padding 0 10px

  display flex
  flex-direction column
  justify-content center

  h1
    font-size 25px
    margin-bottom 1em

ul.blue-dot
  margin-bottom 2em
  li
    margin-bottom 1em
    &:before
      content '\25CF\2000' //http://unicode-table.com/ru/search/?q=%D0%BA%D1%80%D1%83%D0%B3
      color color-light-blue



.blue-form
  background color-light2-blue
  padding 1em 1em 1.4em

  text-align center
  h1
    color #FFF
    margin .5em 0
    line-height 125%

  input
    line-height: 33px
    height: 35px
    padding 0 1em

  input, button
    width 100%
    margin .5em 0

  button
    border 1px solid rgba(#FFF, .4)



.swiper-dot
  text-align center

.swiper-dot-pagination
  margin 2em 0 3em
  text-align center
  .swiper-pagination-bullet
    width: 11px
    height: 11px
    margin 5px
  //.swiper-pagination-bullet-active
