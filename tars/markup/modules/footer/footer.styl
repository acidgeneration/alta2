.msg
	position: absolute
	left 0
	top 0
	bottom 55px
	width 100%
	background #ffffff
	opacity 0
	visibility hidden
	transition 	visibility .3s ease 0s ,opacity .3s ease 0s
	.btn-close
		position absolute
		z-index 10
		width 50px
		height 50px
		display block
		right -20px
		top 20px
		font-size 16px
		color #777
	.sub-title
		position absolute
		left 0
		width 100%
		top 50%
		text-align center
		transform translateY(-50%)
	.sent &
		opacity 1
		visibility visible
