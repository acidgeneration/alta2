.intro
	background url(../img/content/home-bg.jpg) 50% 50% no-repeat
	background-size cover

	padding 10px 13px 0

	color #FFF
	font-size 18px
	text-align center

	.logotype
		min-width 250px
		width 60%
		max-width 499px //-физически картинка
		margin 5px auto 0
		display: block
		img
			width 100%
			//display block

	p
		font-size 18px
		line-height 21px
		padding 0 5% 30px

	.intro-list
		a
			width 50%
			float left
			//position relative
			color #FFF
			padding-bottom 15px

		img
			display block
			margin 0 auto 2px
			width 50px
			height 50px
			border 1px solid #FFF
			border-radius 4px
			overflow hidden
