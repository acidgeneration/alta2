.color-table
	padding-bottom 25px
	margin 0 -5px
	.wrap-color
		float left
		width 16.66%
		position relative
	.color
		display block
		position absolute
		right 5px
		top 5px
		left 5px
		bottom 5px
		&.active
			box-shadow 0 0 0 2px #ff3131
			&.shadow
				box-shadow 0 0 0 2px #ff3131,0 0 2px 5px rgba(0,0,0,.24)
			.accept
				opacity 1
	.accept
		position absolute
		width 80%
		height 80%
		max-height 50px
		max-width 50px
		display block
		left 50%
		top 50%
		transform translate(-50%,-50%)
		border-radius 50%
		background rgba(255,255,255,.5)
		opacity 0
		.icon-check
			z-index 2
			color #000000
			font-size 10px
			position absolute
			top 50%
			left 50%
			transform translate(-50%,-50%)
		&:before
			width 70%
			height 70%
			top 15%
			left 15%
			display block
			position absolute
			content ''
			z-index 1
			background #FFF
			border-radius 50%

