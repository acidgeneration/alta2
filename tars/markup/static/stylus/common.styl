.compare-material
	position relative
	display block
	padding-bottom 25px
	.list
		float left
		width 50%
		position relative
		&:first-child
			padding-right 14px
		&:last-child
			padding-left 14px
			&:before
				content 'vs'
				font-weight bold
				color color-light-blue
				font-size 12px
				line-height 60px
				position absolute
				display block
				left 0
				top 0
				transform translateX(-50%)

.compare-item
	position relative
	display none
	&.active
		display block
	.title
		color #777
		font-size 14px
		line-height 17px
		padding-bottom 3px
		display block
		font-weight bold
	.icon
		margin 0 auto 15px
		width 110px
		height 59px
		position relative
		overflow hidden
	img
		width 100%
		display block
		height 100%
	ul
		padding-bottom 3px
		li
			color #777
			font-size 14px
			line-height 18px
			padding-left 10px
			position relative
			&:before
				position absolute
				left 2px
				top 7px
				content ''
				display block
				width 5px
				height 5px
				border-radius 50%
		&.plus
			li
				&:before
					background #58b200
		&.minus
			li
				&:before
					background #ff1744





.double-tab
	padding-bottom 23px
	.item
		//font-size 14px
		line-height 33px
		height 35px
		color #444

		//box-sizing: content-box
		width 48%
		float left

		text-align center
		background #FFF
		border 1px solid #CCC
		box-shadow -3px 3px 9px 0 rgba(0,0,0,.24);
		margin-top -1px
		transition border .3s ease 0s,box-shadow .3s ease 0s,background .3s ease 0s
		&:last-child
			float right
		&.active
			background #DDD
			box-shadow none
			border none
			margin-top 0
		&.dbl-row
			line-height 18px
			height 39px


.color-table
	padding-bottom 25px
	margin 0 -5px
	.wrap-color
		float left
		width 16.66%
		position relative
	.color
		display block
		position absolute
		right 5px
		top 5px
		left 5px
		bottom 5px
		&.active
			box-shadow 0 0 0 2px #ff3131
			&.shadow
				box-shadow 0 0 0 2px #ff3131,0 0 2px 5px rgba(0,0,0,.24)
			.accept
				opacity 1
	.accept
		position absolute
		width 80%
		height 80%
		max-height 50px
		max-width 50px
		display block
		left 50%
		top 50%
		transform translate(-50%,-50%)
		border-radius 50%
		background rgba(255,255,255,.5)
		opacity 0
		.icon-check
			z-index 2
			color #000000
			font-size 10px
			position absolute
			top 50%
			left 50%
			transform translate(-50%,-50%)
		&:before
			width 70%
			height 70%
			top 15%
			left 15%
			display block
			position absolute
			content ''
			z-index 1
			background #FFF
			border-radius 50%

.double-col
	position relative
