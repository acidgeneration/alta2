// СЧЁТЧИКИ
.counter
	counter-reset list

	.wrap-item:before
		position absolute
		display block
		left 10px
		top -6px
		color #0071bb
		font-size 25px
		line-height 40px
		counter-increment: list
		content: counter(list) ". "


.ol_counter
	padding-left 60px
	li
		position relative
		line-height 3em
		&:before
			counter-increment: list
			content: counter(list)

			position: absolute;
			background color-light-blue
			top .5em
			left: -50px;
			width: 2em //30px;
			height: 2em //30px;
			border-radius: 50%;

			line-height 2.1em
			color #FFF
