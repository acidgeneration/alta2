//ярлык скидка
//figure.badge
.badge
	position relative
	display inline-block
	margin 1em 0 0 //reset figure
	&-sale
		position absolute
		top 0
		left 0
		background #e00c1b
		font-size 21px
		padding .8em .2em .3em
		color #FFF
		//css треугольник
		&:after
			content ''
			position absolute
			bottom -10px
			left 0
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 10px 37px 0 0;
			border-color: #e00c1b transparent transparent transparent;



