.control
	position relative
	//display inline-block
	padding-left 1.5rem
	padding-bottom 1em

	cursor pointer
	input
		position absolute
		opacity 0
		z-index -1


		//display none

		&:focus
			& ~ .control-indicator
				box-shadow 0 0 0 .075rem #fff, 0 0 0 .2rem #0074d9
		&:checked
			& ~ .control-indicator
				color #fff
				background-color #0074d9
		&:active
			& ~ .control-indicator
				color #fff
				background-color #84c6ff

.control-indicator
	position absolute
	top .25rem
	left 0
	display block
	width 1rem
	height 1rem
	line-height 1rem
	font-size 65%
	color #eee
	text-align center
	background-color color-blue //#eee
	background-size 50% 50%
	background-position center center
	background-repeat no-repeat
	user-select none

.checkbox
	.control-indicator
		border-radius .25rem
	input
		&:checked
			& ~ .control-indicator
				background #000



.radio
	.control-indicator
		border-radius 50%
	input
		&:checked
			& ~ .control-indicator
				background #000




