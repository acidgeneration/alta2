.control
	position relative
	//display inline-block
	display block

	padding-left 1.5rem
	padding-bottom 1em
	line-height: 1rem

	cursor pointer


	// white-space nowrap
	// text-overflow ellipsis
	// overflow hidden


	input
		//display none
		position absolute
		opacity 0
		z-index -1

		// &:focus
		// 	& ~ .control-indicator
		// 		box-shadow 0 0 0 .075rem #fff, 0 0 0 .2rem #0074d9

		&:checked
		&:active
			& ~ .control-indicator
				color #fff
				border 0
		&:checked
			& ~ .control-indicator
				background-color color-light-blue //#0074d9
		&:active
			& ~ .control-indicator
				background-color #2E8BC7 //#84c6ff

.control-indicator
	position absolute
	top 0 //.25rem
	left 0

	width 1rem
	height 1rem

	background-color #CCC //color-blue
	border 1px solid #AAA

	line-height 1rem
	font-size 75% //65%
	//color transparent //#FFF //#eee
	text-align center


	user-select none

.checkbox
	.control-indicator
		border-radius .25rem
	input
		height 100%
		line-height: 0
		margin 0
		&:checked
			& ~ .control-indicator
				//background color-light-blue //#000
				&:before
					content '✔'

.radio
	.control-indicator
		border-radius 50%
	input
		&:checked
			& ~ .control-indicator
				//
				&:before
					content '\26AB'

